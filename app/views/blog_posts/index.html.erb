<h1>My Blog</h1>
<% @blog_posts.each do |blog_post| %>
  <div>
    <h2><%= link_to blog_post.title, blog_post %></h2>
    <p><%= blog_post.content %></p>
    <% if blog_post.draft? %>
      <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
    <% elsif blog_post.scheduled? %>
      <div class="p-2 rounded bg-yellow-500 text-white">Scheduled</div>
    <% elsif blog_post.published? && user_signed_in? %>
      <div class="p-2 rounded bg-green-400 text-white">Published</div>
    <% end %>
  </div>
<% end %>
