<h1>My Blog</h1>
<% @blog_posts.each do |blog_post| %>
  <div>
    <h2><%= link_to blog_post.title, blog_post %></h2>
    <p><%= blog_post.body %></p>
    <% if blog_post.draft? %>
      <div class="py-2 rounded bg-gray-100 text-gray-900">Draft</div>
    <% elsif blog_post.schedule? %>
      <div class="py-2 rounded bg-gray-100 text-gray-900">Scheduled</div>
    <% elsif blog_post.published? && user_signed_in? %>
      <div class="py-2 rounded bg-gray-100 text-gray-900">Published</div>
    <% end %>
  </div>
<% end %>
